{
  "dashboard": {
    "id": null,
    "title": "Social Sentiment Monitoring",
    "tags": ["sentiment", "social-media", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Sentiment Collection Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"sentiment-service\"}",
            "legendFormat": "Sentiment Service"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Data Collection Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(sentiment_posts_collected_total[5m])",
            "legendFormat": "{{platform}} - {{symbol}}"
          }
        ],
        "yAxes": [
          {
            "label": "Posts per minute"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Platform Health Status",
        "type": "table",
        "targets": [
          {
            "expr": "sentiment_platform_healthy",
            "legendFormat": "{{platform}}"
          }
        ],
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 4}
      },
      {
        "id": 4,
        "title": "Sentiment Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "sentiment_label_count",
            "legendFormat": "{{label}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 6, "y": 8}
      },
      {
        "id": 5,
        "title": "API Rate Limits",
        "type": "graph",
        "targets": [
          {
            "expr": "sentiment_api_rate_limit_remaining",
            "legendFormat": "{{platform}} remaining"
          },
          {
            "expr": "sentiment_api_rate_limit_total",
            "legendFormat": "{{platform}} total"
          }
        ],
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 10}
      },
      {
        "id": 6,
        "title": "Collection Errors",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(sentiment_collection_errors_total[5m])",
            "legendFormat": "{{platform}} - {{error_type}}"
          }
        ],
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 10}
      },
      {
        "id": 7,
        "title": "Most Mentioned Symbols",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sentiment_symbol_mentions_total)",
            "legendFormat": "{{symbol}}"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 16}
      },
      {
        "id": 8,
        "title": "Sentiment Trends by Symbol",
        "type": "graph",
        "targets": [
          {
            "expr": "sentiment_average_score",
            "legendFormat": "{{symbol}}"
          }
        ],
        "yAxes": [
          {
            "min": -1,
            "max": 1,
            "label": "Sentiment Score"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 6, "y": 16}
      },
      {
        "id": 9,
        "title": "Data Freshness",
        "type": "stat",
        "targets": [
          {
            "expr": "time() - sentiment_last_update_timestamp",
            "legendFormat": "Seconds since last update"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 300},
                {"color": "red", "value": 900}
              ]
            }
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 10,
        "title": "Platform-Specific Metrics",
        "type": "table",
        "targets": [
          {
            "expr": "sentiment_posts_collected_total",
            "legendFormat": "{{platform}}"
          }
        ],
        "transformations": [
          {
            "id": "groupBy",
            "options": {
              "fields": {
                "platform": {
                  "aggregations": []
                },
                "Value": {
                  "aggregations": ["sum"]
                }
              }
            }
          }
        ],
        "gridPos": {"h": 6, "w": 6, "x": 18, "y": 4}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}